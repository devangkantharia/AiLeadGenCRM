{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // --- THIS IS THE FIX ---
    "types": [
      "jest",
      "node"
    ]
    // --- END FIX ---
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // --- ADD THESE ---
    "jest.config.mjs",
    "jest.setup.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
    // --- END ADD ---
  ],
  "exclude": [
    "node_modules"
  ]
}